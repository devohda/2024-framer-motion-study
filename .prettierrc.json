{
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "overrides": [
        {
            "files": ["*.js", "*.jsx", "*.ts", "*.tsx"],
            "options": {
                "parser": "babel",
                "tabWidth": 2
            }
        },
        {
            "files": ["*.json"],
            "options": {
                "parser": "json",
                "tabWidth": 4
            }
        }
    ]
}
